import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;


public class start {
	public int lineNum =0;
	public static void main (String[] Args){
		start obj = new start();
		obj.run();
		
	}
		String total = "0";
	
	public void run(){
		String file = "C:\\Users\\curti_000\\Dropbox\\Programming\\test.csv";
		BufferedReader br = null;
		String line = "";
		String csvSplit = ",";
		try{ 
			br = new BufferedReader(new FileReader(file));
			while((line = br.readLine()) != null){
				String[] numbers = line.split(csvSplit);
				for(int i =0; i < numbers.length; i++){
					check(numbers[i], numbers, i);
				}
				lineNum++;
				
			}
		}
		catch (FileNotFoundException e) {
			System.out.println("could not fine the file");
			e.printStackTrace();
		}
		catch (IOException e) {
			System.out.println("IOError");
			e.printStackTrace();
		} finally {
			if (br != null) {
				try {
					checkAllClasses();
					br.close();
				} 
				catch (IOException e) {
					e.printStackTrace();
				}
			}
		}
	}
	int Current = 0;
	boolean startlog = false;
	String ClassType;
	public void check(String value, String[] Array, int i){
		if(value.contains("ELZ")||value.contains("MHZ")||value.contains("SCZ")||value.contains("HSZ")||value.contains("FAZ")||value.contains("OCZ")||value.contains("CSZ")||value.contains("EDZ")||value.contains("CPZ")||value.contains("BIZ")||value.contains("PYZ")||value.contains("HLZ")||value.contains("LGZ")||value.contains("EWZ")){
			finalCheck();
			total = Array[10];
			Current = 0;
			ClassType = value;
			//System.out.println("total = " + total + "  Current = " + Current);
		}
		try{
			int num = Integer.parseInt(value);
			if(num == 1){
				Current++;
				CheckClassAmount(i);
			}
		}
		catch(Exception e){
			//System.out.println("the thing crashed");
		}
		
		
	}
	
	public boolean finalCheck(){
		int pptotal = Integer.parseInt(total);
		if(ClassType == null){
			return false;
		}
		if(Current >= pptotal){
			System.out.println("\n\t\t\tyou are good on " + ClassType + " with a total of " + Current + " Credentials");
		}
		else{
			System.out.println("\n\t\t\tyou are missing " + (pptotal - Current) +  " in " + ClassType);
		}
		return true;
	}
	int[] classes = new int[8];
	private void CheckClassAmount(int i){
			classes[i-1]++;
	}
	private void checkAllClasses(){
		for(int i = 0; i < classes.length; i++){
			if(classes[i] != 7){
				System.out.println("you have " + classes[i] + " insemester " + i);
			}
		}
	}
}
